extend login-layout

block content

  include mixins/form-fields

  form(action='/admin/setup', method='post')
    h1 Admin Setup
    h2 There is currently no administrator account.
    p Create a default administrator by entering details below.
    fieldset
      - if (Object.keys(errors).length > 0)
      .notification.error
        h4 Please check the form and try again
        - each error in errors
          p= error
      mixin textField({ name :'emailAddress' }, { label: 'Email Address' })
      mixin textField({ name :'firstName' }, { label: 'First Name' })
      mixin textField({ name :'lastName' }, { label: 'Last Name' })
      mixin passwordField({ name :'password' }, { label: 'Password' })
    fieldset.actions
      input.button.primary(name='Submit', type='submit', value='Create now')