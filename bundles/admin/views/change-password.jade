extend login-layout

block content

  include mixins/form-fields

  form(method='post')
    h1 Change your password
    p Fill in your preferred password and submit
    -if (!entity)
      fieldset
        p.error
          strong Invalid token
    -else
      fieldset
        -if (error)
          p.error
            strong= error
        .form-row
          label
            span E-mail Address
            span= entity.emailAddress
        mixin passwordField({ name :'password' }, { label: 'Password' })
      fieldset.actions
        input.button.primary(name='Submit', type='submit', value='Save')