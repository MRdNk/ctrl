/** Buttons **/

button
  box-sizing border-box

button,
.button
  position relative
  display inline-block
  width auto
  padding 8px 16px
  font-size 1em
  line-height 1.2
  font-weight bold
  background-color $buttonColor
  text-decoration none
  outline 0 /* Be sure to set a focus style if using this */
  cursor pointer
  border 1px solid darken($buttonColor, 15%)
  box-shadow 0 0 0 1px lighten($buttonColor, 40%) inset
  if dark($buttonColor)
    color #fff /* TODO - move to variable */
  else
    color #777 /* TODO - move to variable */

  &:hover
    background-color darken($buttonColor, 10%)
    color #555
  &:active,
  &:focus
    top 1px
    background-color darken($buttonColor, 10%)

  &.primary
    background-color $primaryColor
    border 1px solid darken($primaryColor, 15%)
    box-shadow 0 0 0 1px lighten($primaryColor, 20%) inset
    if dark($primaryColor)
      color #fff /* TODO - move to variable */
    else
      color #333 /* TODO - move to variable */
    &:hover
      background-color lighten($primaryColor, 10%)
    &:active,
    &:focus
      background-color darken($primaryColor, 10%)

  &.success
    background-color $colorSuccess
    border 1px solid darken($colorSuccess, 10%)
    box-shadow 0 0 0 1px lighten($colorSuccess, 30%) inset
    color #FFFFFF
    &:hover
      background-color lighten($colorSuccess, 10%)
    &:active,
    &:focus
      background-color darken($colorSuccess, 10%)

  &.notice
    background-color $colorNotice
    border 1px solid darken($colorNotice, 10%)
    box-shadow 0 0 0 1px lighten($colorNotice, 30%) inset
    color #FFFFFF
    &:hover
      background-color lighten($colorNotice, 10%)
    &:active,
    &:focus
      background-color darken($colorNotice, 10%)

  &.warning
    background-color $colorWarning
    border 1px solid darken($colorWarning, 10%)
    box-shadow 0 0 0 1px lighten($colorWarning, 30%) inset
    color #FFFFFF
    &:hover
      background-color lighten($colorWarning, 10%)
    &:active,
    &:focus
      background-color darken($colorWarning, 10%)

  &.error
    background-color $colorError
    border 1px solid darken($colorError, 10%)
    box-shadow 0 0 0 1px lighten($colorError, 30%) inset
    color #FFFFFF
    &:hover
      background-color lighten($colorError, 10%)
    &:active,
    &:focus
      background-color darken($colorError, 10%)