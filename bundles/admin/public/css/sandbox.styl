section:target
  margin-left -18px
  margin-right -18px
  padding-left 17px
  padding-right 17px
  border 1px solid transparent
  border-radius 5px
  -webkit-animation-name target-highlight
  -webkit-animation-duration 2.5s
  -webkit-animation-iteration-count
  -webkit-animation-timing-function ease-in-out

@-webkit-keyframes target-highlight
  0%
    background-color rgba($colorPrimary, 0)
    border-color rgba($colorPrimary, 0)
  20%
    background-color rgba($colorPrimary, 0.2)
    border-color rgba($colorPrimary, 0.4)
  100%
    background-color rgba($colorPrimary, 0)
    border-color rgba($colorPrimary, 0)