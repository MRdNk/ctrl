.page-header
  position relative
  margin-bottom 3em

  h1
    margin-bottom 0.2em

.page-actions
  position absolute
  top 0
  right 0

  li
    float left
    margin-left 10px








fieldset,
[class^="panel"]
  position relative
  margin-bottom 3em

  h3
    position relative
    text-transform uppercase
    border-bottom 3px solid #ccc
    padding-bottom 10px






